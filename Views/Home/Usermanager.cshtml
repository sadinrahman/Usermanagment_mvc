@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>User Manager - Registered Users</h1>

<!-- Back Button -->
<div class="mb-4">
    <button type="button" class="btn btn-secondary" onclick="window.history.back();">Back</button>
    <a href="/Home/CreateUser" class="btn btn-primary">Create User</a>
</div>

    <form method="get" asp-action="Usermanager">
    <div class="input-group mb-4">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Username or Email" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="EditUser" asp-route-id="@user.Id" method="get">
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form> 
                    </td>
                </tr>
        }
    </tbody>
</table>
